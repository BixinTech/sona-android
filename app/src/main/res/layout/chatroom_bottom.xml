<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/chatroom_bg_bottom_function">

    <TextView
        android:id="@+id/tvChat"
        android:layout_width="69dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/chatroom_bg_bottom_chat"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="聊聊..."
        android:textColor="#CCEAE6FF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivMic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="6dp"
        android:src="@mipmap/chatroom_ic_bottom_bar_micro_off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivGift"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivGift"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="6dp"
        android:src="@mipmap/chatroom_ic_bottom_bar_gift"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivMore"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivMore"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:src="@mipmap/chatroom_ic_bottom_bar_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvUpOrDownSeat"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUpOrDownSeat"
        android:layout_width="92dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:background="@mipmap/chatroom_bg_bottom_bar_seat"
        android:gravity="center"
        android:text="我要上麦"
        android:textColor="#FFEAE6FF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>